<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wyc.mapper.UserMapper" >
    <!--jdbcType=VARCHAR 可写 可不写-->
    <select id="findByUsername" resultType="com.wyc.model.User" parameterType="String">
        select * from userxx where username = #{username}
    </select>

    <select id="findById" resultType="com.wyc.model.User" parameterType="int">
        select * from userxx where id = #{id}
    </select>
</mapper>
